<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HistoryViewer" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_blue_600</item>
    </style>

    <style name="Theme.HistoryViewer" parent="Base.Theme.HistoryViewer" />

    <style name="Theme.HistoryViewer.Fullscreen" parent="Theme.HistoryViewer">
        <item name="android:actionBarStyle">@style/Widget.Theme.HistoryViewer.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.HistoryViewer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>